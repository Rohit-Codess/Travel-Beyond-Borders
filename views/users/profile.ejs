<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <div class="text-center mb-4">
    <h2 class="text-success"><i class="fa-solid fa-user me-2"></i>@<%= user.username %>'s Listings</h2>
    <% if (user.profileImage?.url) { %>
      <img src="<%= user.profileImage.url %>" class="rounded-circle shadow" style="width: 100px; height: 100px;" />
    <% } %>
    <p class="text-muted mt-2">Showing <%= listings.length %> listings by this user</p>
  </div>

  <div class="row g-4">
    <% listings.forEach(listing => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 rounded-4">
          <img src="<%= listing.image.url %>" class="card-img-top" style="height: 200px; object-fit: cover;" />
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="text-muted small"><%= listing.country %> - <%= listing.location %></p>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-success">View Listing</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <h2 class="text-center text-success mb-4">Forgot Password?</h2>

  <form method="POST" action="/users/forget-password">
    <div class="mb-3">
      <label for="email" class="form-label fw-bold">Enter your email address</label>
      <input type="email" class="form-control" id="email" name="email" required />
    </div>
    <button type="submit" id="submitButton" class="btn btn-success w-100">
      <span id="submitSpinner" class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
      <span id="submitText">Send Reset Link</span>
    </button>    
  </form>
</div>

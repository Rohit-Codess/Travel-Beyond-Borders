<% layout("/layouts/boilerplate") %>

<div class="container my-5 animate__animated animate__backInDown">
  <h1 class="text-center mb-5">
    <i class="fa-solid fa-chart-line text-success me-2"></i> Admin Dashboard
  </h1>

  <div class="row g-4">
    <div class="col-md-4">
      <div class="card text-white bg-primary shadow h-100">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h3 class="card-title"><i class="fa-solid fa-users me-2"></i> Users</h3>
          <h2><%= userCount %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card text-white bg-success shadow h-100">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h3 class="card-title"><i class="fa-solid fa-house me-2"></i> Listings</h3>
          <h2><%= listingCount %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card text-white bg-warning shadow h-100">
        <div class="card-body d-flex flex-column justify-content-center align-items-center">
          <h3 class="card-title"><i class="fa-solid fa-star me-2"></i> Reviews</h3>
          <h2><%= reviewCount %></h2>
        </div>
      </div>
    </div>
  </div>

  <div class="text-center mt-5">
    <a href="/admin/users" class="btn btn-outline-danger btn-lg">
      <i class="fa-solid fa-user-gear me-2"></i> Manage Users
    </a>
  </div>
</div>

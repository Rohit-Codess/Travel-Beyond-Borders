<% layout("/layouts/boilerplate") %>
<!-- Hero Section -->
<section
  class="hero-section d-flex align-items-center justify-content-center text-white text-center"
>
  <div
    class="overlay position-absolute w-100 h-100"
    style="background-color: rgba(0, 0, 0, 0.4)"
  ></div>

  <div class="container position-relative">
    <h1 class="display-3 fw-bold animate__animated animate__fadeInDown">
      Discover the World Beyond Borders
    </h1>
    <p class="lead animate__animated animate__fadeInUp mt-3">
      Let your next adventure begin with us â€” from mountains to beaches, cities
      to dreams.
    </p>
    <a
      href="/users/signup"
      rel="noopener noreferrer"
      class="explore-btn btn btn-primary btn-lg mt-4 shadow-sm animate__animated animate__fadeInUp"
      >Explore Places</a
    >
  </div>
</section>

<!-- Optional Section -->
<section class="text-center py-5 bg-light">
  <div class="container">
    <h2 class="fw-bold mb-3">Why Travel With Us?</h2>
    <p class="text-muted mb-4">
      We curate unforgettable experiences with local insights and global reach.
    </p>
    <div class="row g-4">
      <div class="col-md-4">
        <i class="fa-solid fa-earth-americas fa-3x text-primary mb-3" aria-label="earth"></i>
        <h5>Worldwide Destinations</h5>
        <p class="text-muted">
          Handpicked places from hidden gems to world wonders.
        </p>
      </div>
      <div class="col-md-4">
        <i class="fa-solid fa-plane-departure fa-3x text-danger mb-3" aria-label="plan"></i>
        <h5>Seamless Planning</h5>
        <p class="text-muted">All bookings and support, just one click away.</p>
      </div>
      <div class="col-md-4">
        <i class="fa-solid fa-heart fa-3x text-success mb-3" aria-label="heart"></i>
        <h5>Trusted by Travelers</h5>
        <p class="text-muted">Thousands of happy explorers vouch for us!</p>
      </div>
    </div>
  </div>
</section>